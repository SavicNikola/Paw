<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        >

        <!--veliki layout unutar kartice-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!--layout za sliku, ime prezime i vreme-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/profile_help_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FOUND"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/profile_help_item_time_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1h ago"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="end"
                    android:layout_weight="1"/>

            </LinearLayout>

            <!--deskripcija-->
            <TextView
                android:id="@+id/profile_help_item_help_desc"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Korisnikov opis posta, na primer kratke informacije o izgubljenom ljubimcu.. Klikom na post dobice vise informacija.."/>

            <!--velika slika posta ideja da se zameni sa vise slika-->
            <ImageView
                android:id="@+id/profile_help_item_post_help_picture"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_paw"
                android:layout_weight="1"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>