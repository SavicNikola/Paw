<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/appColorSecondary</item>
    </style>

    <style name="EditTextHintStyle">
        <item name="android:textColor">@color/appColorSecondary</item>
        <item name="android:textSize">@dimen/hint_size</item>
    </style>

    <style name="ButtonSecondaryColor" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_secondary_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ButtonTertiaryColor" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_tertiary_color</item>
        <item name="android:textColor">@color/appColorSecondary</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
</resources>
